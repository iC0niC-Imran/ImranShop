@page "{id:Guid}"
@model SimpleShop.Web.Pages.Orders.DetailsModel
@{
    ViewData["Title"] = $"Order #{Model.Order.Number}";
}

<div class="container p-5">
    <div class="block">
        <h1 class="title">Order #@Model.Order.Number</h1>
    </div>
    <div class="columns">
        <div class="column is-9">
            @foreach(var item in Model.Order.Items)
            {
                <article class="media is-flex is-align-items-center">
                    <figure class="media-left">
                        <p class="image is-128x128">
                            <img src="~/assets/@item.Product.ImagePath">
                        </p>
                    </figure>
                    <div class="media-content">
                        <div class="content">
                            <p class="is-size-5 mb-0">@item.Product.Name</p>
                            <p class="mb-0">Size: @item.Size</p>
                            <p class="mb-0 has-text-grey">Quantity: @item.Quantity</p>
                            <p class="mb-0 is-size-5 has-text-weight-medium">@(item.Product.Price * item.Quantity) $</p>
                        </div>
                    </div>
                </article>
            }
        </div>
        <div class="column is-3">
            <div class="is-flex is-justify-content-space-between">
                <p class="subtitle">Status</p>
                <p class="subtitle">IN REALIZATION</p>
            </div>
            <div class="is-flex is-justify-content-space-between">
                <p class="subtitle">payment</p>
                <p class="subtitle">@Model.Order.Details.PaymentMethod.ToUpper()</p>
            </div>
            <div class="is-flex is-justify-content-space-between">
                <p class="subtitle">Addition</p>
                <p class="subtitle has-text-weight-medium">@Model.Order.Details.Total $</p>
            </div>
            <div class="has-border-y py-5">
                <p class="mb-2 has-text-weight-medium is-size-5">@($"{Model.Order.Details.FirstName} {Model.Order.Details.LastName}")</p>
                <p>@($"{Model.Order.Details.Street} {Model.Order.Details.Apartment}")</p>
                <p>@($"{Model.Order.Details.PostalCode} {Model.Order.Details.City}")</p>
                <p>+48 @Model.Order.Details.Phone</p>
            </div>
            <div class="has-text-centered mt-5">
                <button class="button is-success">Tracking your order</button>
            </div>
        </div>
    </div>
</div>