@page "{orderId:Guid}"
@model SimpleShop.Web.Pages.Cart.SummaryModel
@{
    ViewData["Title"] = $"Order #{Model.Order.Number}";
}

<div class="container has-text-centered">
    <div class="block">
            <span class="icon is-large">
                <i class='bx bx-receipt bx-lg'></i>
            </span>
        </div>
        <div>
            <p class="title has-text-weight-medium"> Thank you, @Model.Order.Details.FirstName!</p>
            <p class="subtitle">Order #@Model.Order.Number has been submitted.</p>
            <a class="button is-outlined" asp-area="" asp-page="/Orders/Index">my orders</a>
        </div>
</div>
